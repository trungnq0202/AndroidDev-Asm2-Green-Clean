<?xml version="1.0" encoding="utf-8"?><!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.site_detail.SiteDetailFragment">

    <TextView
        android:id="@+id/siteDetailEventNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text=""
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/siteDetailLocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24 duong so 17 khu dan cu phuoc kien, huyen Nha be" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_address" />

        <TextView
            android:id="@+id/siteDetailAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24 duong so 17 khu dan cu phuoc kien, huyen Nha be" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START DATE"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/siteDetailStartDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/12/2021" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="END DATE"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/siteDetailEndDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/12/2021" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/customInfoAlreadyJoinedMsgTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="You have already joined this event!"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/customInfoAdminMsgTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="You are the admin of this event!"
        android:textStyle="bold"
        android:visibility="gone" />


</LinearLayout>